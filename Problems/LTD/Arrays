public class MyProgram {
    public static void main(String[] args) {
        // Declare an array of fruits
        String[] fruits = {"apple", "banana", "orange", "kiwi", "grape"};

        // Print each fruit to the console using a for loop
        for (int i = 0; i < fruits.length; i++) {
            System.out.println(fruits[i]);
        }
    }
}

------------------------------------------------------------------------------------------------

public class MyProgram {
    public static void main(String[] args) {
        // Declare an array of fruits
        String[] fruits = {"apple", "banana", "orange", "kiwi", "grape"};

        // Access individual elements in the array
        System.out.println(fruits[0]); // Output: apple
        System.out.println(fruits[2]); // Output: orange
        System.out.println(fruits[4]); // Output: grape
    }
}


