import java.util.Arrays;

public class MyProgram {
    public static void main(String[] args) {
        // Declare an array of fruits
        String[] fruits = {"apple", "banana", "orange", "kiwi", "grape"};

        // Perform a slicing operation on the array
        String[] slicedFruits = Arrays.copyOfRange(fruits, 1, 4);

        // Print the sliced array to the console
        System.out.println(Arrays.toString(slicedFruits)); // Output: [banana, orange, kiwi]
    }
}


